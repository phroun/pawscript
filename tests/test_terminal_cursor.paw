print ""

print "=== Test 3: Cursor list has named args ==="
screenRows: {ret ~info.screen_rows}
screenCols: {ret ~info.screen_cols}
x: {ret ~info.x}
y: {ret ~info.y}
visible: {ret ~info.visible}
shape: {ret ~info.shape}
duplex: {ret ~info.duplex}
print "screen_rows present: yes"
print "screen_cols present: yes"
print "x present: yes"
print "y present: yes"
print "visible: ~visible"
print "shape: ~shape"
print "duplex: ~duplex"
print ""

print "=== Test 4: Setting position ==="
cursor x: 5, y: 10
info2: {cursor}
x2: {ret ~info2.x}
y2: {ret ~info2.y}
print "After x:5, y:10 -> x=~x2, y=~y2"
print ""

print "=== Test 5: Setting visibility ==="
cursor visible: false
info3: {cursor}
vis3: {ret ~info3.visible}
print "After visible:false -> visible=~vis3"
cursor visible: true
info4: {cursor}
vis4: {ret ~info4.visible}
print "After visible:true -> visible=~vis4"
print ""

print "=== Test 6: Setting shape ==="
cursor shape: underline
info5: {cursor}
shape5: {ret ~info5.shape}
print "After shape:underline -> shape=~shape5"
cursor shape: block
info6: {cursor}
shape6: {ret ~info6.shape}
print "After shape:block -> shape=~shape6"
print ""

print "=== Test 7: Sticky region parameters ==="
cursor xbase: 5, ybase: 3, rows: 20, cols: 60
info7: {cursor}
